@model LoginViewModel
<div class="modal-dialog mx-auto">
    <div class="modal-content">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="modal-header">
                <h2 class="mx-auto font-moria-citadel">Login</h2>
            </div>
            <div class="modal-body">
                <div class="form-group center">
                    <label asp-for="Username"><b>Username</b></label>
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username...">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group center">
                    <label asp-for="Password"><b>Password</b></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="center">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Remember Me</label>
                </div>
            </div>

            <div class="modal-footer d-block">
                <div class="button-holder d-flex justify-content-around">
                    <button type="submit" class="btn sk-login-btn col-md-4">Login</button>
                    <button data-dismiss="modal" class="btn sk-login-btn col-md-4">Cancel</button>
                </div>
                <div class="center">
                    <div>
                        <a asp-controller="Account" asp-action="Register" class="login-links">Register as a new user</a>
                    </div>
                    <div>
                        <a asp-controller="Account" asp-action="LoginWithFacebook" name="provider" value="Facebook" class="login-links">Login with Facebook</a>
                    </div>
                </div>


            </div>

        </form>

    </div>
</div>

<partial name="_ValidationScriptsPartial" />

